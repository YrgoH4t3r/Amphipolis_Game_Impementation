package Test;

import Model.*;
import org.junit.Test;
import org.junit.Before;
import static org.junit.Assert.*;

public class BoardTest {
    private Board board;

    @Before
    public void setUp() {
        board = new Board();
        board.initializeTiles();
    }

    @Test
    public void testAreaMaxCapacity() {
        for (int i = 0; i < 8; i++) {
            board.placeTileInArea(new MosaicT(new SimpleTile("green")));
        }
        assertEquals(8, board.getAreaTiles("mosaic").size());
    }

    @Test
    public void testLandslideMaxCapacity() {
        for (int i = 0; i < 20; i++) {
            board.placeTileInArea(new LandslideT(new SimpleTile("landslide")));
        }
        assertEquals(16, board.getLandslideTiles().size());
    }

    @Test
    public void testGameOverWhenLandslideFull() {
        for (int i = 0; i < 16; i++) {
            board.placeTileInArea(new LandslideT(new SimpleTile("landslide")));
        }
        assertTrue(board.isGameOver());
    }

    @Test
    public void testTakeTileFromArea() {
        board.placeTileInArea(new MosaicT(new SimpleTile("green")));
        Tile taken = board.takeTileByIndex("mosaic", 0);
        assertNotNull(taken);
        assertTrue(taken instanceof MosaicT);
    }
}